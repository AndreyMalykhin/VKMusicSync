<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/button_background_end" />

            <stroke android:width="1dp" android:color="@color/button_stroke" />

            <corners android:radius="@dimen/button_corner_radius" />

            <padding android:bottom="@dimen/button_padding_top_bottom" android:left="@dimen/button_padding_left_right" android:right="@dimen/button_padding_left_right" android:top="@dimen/button_padding_top_bottom" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="@color/button_background_end" android:startColor="@color/button_background_start" />

            <stroke android:width="1dp" android:color="@color/button_stroke" />

            <corners android:radius="@dimen/button_corner_radius" />

            <padding android:bottom="@dimen/button_padding_top_bottom" android:left="@dimen/button_padding_left_right" android:right="@dimen/button_padding_left_right" android:top="@dimen/button_padding_top_bottom" />
        </shape></item>

</selector>